TELEGRAM_BOT_TOKEN=
ALLOWED_USER_IDS=
ADMIN_USER_IDS=
# Optional mapping so AI can identify people by Telegram ID.
# Format example: 123456789:Ray;987654321:Alice
TELEGRAM_USER_ALIASES=

# Primary Gemini key (required)
GEMINI_API_KEY=
# Optional single fallback key
GEMINI_API_KEY_FALLBACK=
# Optional additional fallback keys (comma-separated)
GEMINI_API_KEY_FALLBACKS=

GROQ_API_KEY=

# Docker default paths:
# DATA_DIR=/data
# USER_DIR=/data/users
# SHARED_DIR=/data/shared
# Local default path:
# DATA_DIR=./data
DATA_DIR=/data
USER_DIR=/data/users
SHARED_DIR=/data/shared

CACHE_TTL_HOURS=72
SANDBOX_IMAGE=agent-sandbox-runner:latest
SANDBOX_TIMEOUT_SECONDS=30
SANDBOX_MEMORY=512m
SANDBOX_CPUS=0.5
LOG_LEVEL=INFO
TIMEZONE=America/Los_Angeles

# Optional Raspberry Pi camera controls for Gemini tools
CAMERA_STILL_COMMAND=rpicam-still
CAMERA_CAPTURE_TIMEOUT_SECONDS=20
CAMERA_CAPTURE_WARMUP_MS=1000

# Gemini safeguards against accidental overuse
GEMINI_MAX_CALLS_PER_MESSAGE=6
GEMINI_MAX_TOOL_CALLS_PER_MESSAGE=10
GEMINI_MAX_RETRIES=2
GEMINI_RETRY_BASE_DELAY_SECONDS=1.0
GEMINI_QUOTA_COOLDOWN_SECONDS=60
GEMINI_DAILY_QUOTA_COOLDOWN_SECONDS=3600
